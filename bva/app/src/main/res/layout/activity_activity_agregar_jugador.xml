<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondoconescudoarriba"
    tools:context="com.example.leo.bva.ActivityAgregarJugador">

    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtVsAZO"
        android:textColorHint="#FFFF"
        android:hint="Nombre"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtDireccion"
        android:layout_alignStart="@+id/txtDireccion"
        android:layout_x="278dp"
        android:layout_y="150dp" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDireccion"
        android:textColorHint="#FFFF"
        android:hint="Direccion"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtVsAZO"
        android:layout_centerHorizontal="true"
        android:layout_x="278dp"
        android:layout_y="350dp" />

    <Spinner
        android:layout_width="600dp"

        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/txtMail"
        android:layout_alignLeft="@+id/txtPeso"
        android:layout_alignStart="@+id/txtPeso"
        android:layout_x="278dp"
        android:layout_y="450dp" />

    <Button
        android:id="@+id/angry_btn"

        android:text="Agregar"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="60dp"
        android:layout_x="375dp"
        android:layout_y="557dp" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtAltura"
        android:hint="Altura"
        android:layout_below="@+id/txtDireccion"
        android:layout_alignLeft="@+id/txtDireccion"
        android:layout_alignStart="@+id/txtDireccion"
        android:textColorHint="#ffffff"
        android:layout_alignRight="@+id/txtDireccion"
        android:layout_alignEnd="@+id/txtDireccion"
        android:textColor="#ffffff"
        android:layout_x="278dp"
        android:layout_y="250dp" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPeso"
        android:hint="Peso"
        android:layout_below="@+id/txtAltura"
        android:layout_alignLeft="@+id/txtAltura"
        android:layout_alignStart="@+id/txtAltura"
        android:textColorHint="#ffffff"
        android:layout_alignRight="@+id/txtDireccion"
        android:layout_alignEnd="@+id/txtDireccion"
        android:textColor="#ffffff"
        android:layout_x="278dp"
        android:layout_y="300dp" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtEdad"
        android:hint="Edad"
        android:layout_below="@+id/txtPeso"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:textColorHint="#ffffff"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:textColor="#ffffff"
        android:layout_x="278dp"
        android:layout_y="200dp" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtMail"
        android:layout_below="@+id/txtEdad"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:hint="E-mail"
        android:textColorHint="#ffffff"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:textColor="#ffffff"
        android:layout_x="278dp"
        android:layout_y="400dp" />

    <Button
        android:id="@+id/button6"
        android:text="Volver"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="79dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_x="864dp"
        android:layout_y="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</AbsoluteLayout>
