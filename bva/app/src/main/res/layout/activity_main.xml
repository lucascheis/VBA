<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondoconescudoarriba"
    tools:context="com.example.leo.bva.MainActivity">


    <Button
        android:id="@+id/button4"
        android:text="Estadisticas"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_x="459dp"
        android:layout_y="291dp" />

    <Button
        android:id="@+id/button3"
        android:text="Entrenamiento"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_x="459dp"
        android:layout_y="496dp" />

    <Button
        android:id="@+id/button2"
        android:text="Empezar partido"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/btnEquipo"
        android:layout_centerHorizontal="true"
        android:layout_x="459dp"
        android:layout_y="390dp" />

    <Button
        android:id="@+id/button"
        android:text="Pizarra"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_x="459dp"
        android:layout_y="189dp" />

    <Button
        android:id="@+id/btnEquipo"

        android:text="Equipo"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_x="459dp"
        android:layout_y="95dp" />


</AbsoluteLayout>
