<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/fondoconescudoarriba"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leo.bva.ActivityEstadisticas">

    <EditText
        android:layout_width="300dp"
        android:layout_height="77dp"
        android:id="@+id/editText"
        android:layout_x="560dp"
        android:layout_y="100dp"
        android:hint="IngreseRival"
        android:textSize="40dp" />

    <ListView
        android:layout_width="788dp"
        android:layout_height="401dp"
        android:id="@+id/listView2"
        android:layout_x="350dp"
        android:layout_y="173dp" />

    <EditText
        android:layout_width="164dp"
        android:layout_height="77dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_x="370dp"
        android:layout_y="100dp"
        android:hint="Mes"
        android:textSize="40dp" />

    <Button
        android:layout_width="252dp"
        android:layout_height="141dp"
        android:background="@drawable/buttonshape"
        android:id="@+id/btnVerxEquipo"
        android:layout_x="48dp"
        android:layout_y="186dp"
        android:text="Ver Por Equipo"
        android:textSize="40dp" />

    <Button
        android:layout_width="252dp"
        android:layout_height="141dp"
        android:id="@+id/btnPorJugador"
        android:background="@drawable/buttonshape"
        android:layout_x="48dp"
        android:layout_y="384dp"
        android:text="Ver POR Jugador"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadisticas"
        android:id="@+id/textView5"
        android:layout_x="506dp"
        android:layout_y="29dp"
        android:textSize="40dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="82dp"
        android:id="@+id/btnBuscar"
        android:background="@drawable/buttonshape"
        android:layout_x="910dp"
        android:layout_y="100dp"
        android:text="Buscar"
        android:textSize="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Totales"
        android:id="@+id/textView6"
        android:layout_x="88dp"
        android:layout_y="110dp"
        android:textSize="60dp" />
</AbsoluteLayout>
